<%= render 'users/sidemenu', {user:@user, book:@book} %>

<div>
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>image</tr>
      <tr>name</tr>
      <tr></tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
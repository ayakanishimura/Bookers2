<% if @book.errors.any? %>
  <div class= "error-explanation">
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <%= form_with model:@book, local:true do |book| %>
    <div class="form-group">
      <label for="book_title">Title</label><br>
      <%= book.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label><br>
      <%= book.text_area :body, autofocus: true, id:"inputBody", placeholder:"本文"%>
    </div>
    <div class="form-group">
        <% end %>
        <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
    </div>
     <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
  </div>
</div>



